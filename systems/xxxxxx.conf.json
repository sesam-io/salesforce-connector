{
  "_id": "xxxxxx",
  "type": "system:rest",
  "headers": {
    "Authorization": "Bearer $SECRET(oauth_access_token)"
  },
  "operations": {
    "account-list": {
      "id_expression": "{{ Id }}",
      "method": "GET",
      "payload_property": "records",
      "url": "query?q=SELECT fields(all) FROM Account LIMIT 200"
    },
    "account-lookup": {
      "method": "GET",
      "payload_property": "records",
      "url": "query?q=SELECT fields(all) FROM Account WHERE Id= '{{ entity.Id }}' LIMIT 200"
    },
    "account-update": {
      "method": "PATCH",
      "url": "sobjects/Account/{{ entity.Id }}"
    }
  },
  "url_pattern": "$ENV(instance_url)/services/data/$ENV(version)/%s",
  "verify_ssl": true
}
